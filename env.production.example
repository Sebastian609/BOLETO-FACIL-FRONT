# Production Environment Variables
# Copy this file to .env.production for production

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.tudominio.com/api
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXT_PUBLIC_AUTH_ENDPOINT=/auth
NEXT_PUBLIC_LOGIN_ENDPOINT=/auth/login
NEXT_PUBLIC_REGISTER_ENDPOINT=/auth/register
NEXT_PUBLIC_LOGOUT_ENDPOINT=/auth/logout
NEXT_PUBLIC_REFRESH_TOKEN_ENDPOINT=/auth/refresh

# Sales API
NEXT_PUBLIC_SALES_ENDPOINT=/sales
NEXT_PUBLIC_PRODUCTS_ENDPOINT=/products
NEXT_PUBLIC_CUSTOMERS_ENDPOINT=/customers

# JWT Configuration
NEXT_PUBLIC_JWT_STORAGE_KEY=auth_token
NEXT_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=refresh_token

# API Headersw
NEXT_PUBLIC_API_TIMEOUT=15000
NEXT_PUBLIC_DEFAULT_HEADERS={"Content-Type": "application/json"}

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_DEBUG_MODE=false

